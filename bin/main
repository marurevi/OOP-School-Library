#!/usr/bin/env ruby

require_relative './../library/app.rb'
require_relative './../library/menu/main_menu.rb'
require_relative './../library/menu/create_person_menu.rb'
require_relative './../library/menu/create_book_menu.rb'
require_relative './../library/menu/create_rental_menu.rb'
require_relative './../library/menu/list_books_menu.rb'
require_relative './../library/menu/list_people_menu.rb'
require_relative './../library/menu/list_rentals_menu.rb'

def main
  app = App.new
  loop do
    MainMenu.new.display
    choice = gets.chomp.to_i
    case choice
    when 1 then ListBooksMenu.new(app).display
    when 2 then ListPeopleMenu.new(app).display
    when 3 then CreatePersonMenu.new(app).display
    when 4 then CreateBookMenu.new(app).display
    when 5 then CreateRentalMenu.new(app).display
    when 6 then ListRentalsMenu.new(app).display
    when 7 
      @exit = true
      app.write_data
      break
    else
      puts 'Invalid choice, please try again'
    end
  end
end

main
